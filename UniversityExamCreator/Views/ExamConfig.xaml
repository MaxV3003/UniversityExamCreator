<Page x:Class="UniversityExamCreator.Views.ExamConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniversityExamCreator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExamConfig"
      Background="White">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="KlausurConfig" VerticalAlignment="Top" FontSize="25"/>

        <TextBlock HorizontalAlignment="Left" Margin="108,113,0,0" TextWrapping="Wrap" Text="Modul auswählen" VerticalAlignment="Top" Background="Gray" Height="22" Width="124" />
        <ComboBox x:Name="Module" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>

        <TextBlock HorizontalAlignment="Left" Margin="108,158,0,0" TextWrapping="Wrap" Text="Prüfungsart wählen" VerticalAlignment="Top" Background="Gray" Height="22" Width="124"/>
        <RadioButton x:Name="MC" Content="MC" GroupName="Prüfungsform" HorizontalAlignment="Left" Margin="340,162,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="OffeneFragen" GroupName="Prüfungsform" Content="Offene Fragen" HorizontalAlignment="Left" Margin="451,162,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="Mischform" GroupName="Prüfungsform" Content="Mischform" HorizontalAlignment="Left" Margin="604,162,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>

        <TextBlock HorizontalAlignment="Left" Margin="108,203,0,0" TextWrapping="Wrap" Text="Klausurenumfang" VerticalAlignment="Top" Background="Gray" Height="22" Width="124"/>
        <TextBox x:Name="NumTasks" HorizontalAlignment="Center" Margin="0,205,0,0" TextWrapping="Wrap" Text="Anzahl Aufgaben" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NumPoints" HorizontalAlignment="Left" Margin="559,205,0,0" TextWrapping="Wrap" Text="Anzahl Punkte" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="108,250,0,0" TextWrapping="Wrap" Text="Klausurüberschrift" VerticalAlignment="Top" Background="Gray" Height="22" Width="124"/>
        <TextBox x:Name="ExamTitle" HorizontalAlignment="Center" Margin="0,252,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Button Content="Weiter" HorizontalAlignment="Left" Margin="693,398,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Zurück" HorizontalAlignment="Left" Margin="60,393,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        
    </Grid>
</Page>
